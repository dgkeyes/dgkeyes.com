---
import { work } from "../../data/work.json";
---

<section>
  <div class="mx-auto max-w-3xl px-8 py-24 sm:py-32">
    <div class="mx-auto max-w-2xl">
      <div>
        <div>
          <div>
            <p
              class="text-2xl font-medium text-balance tracking-tight text-neutral-900 dark:text-white sm:text-4xl">
              Here you can you can find a comprehensive list of all the projects
              I have worked on right here on this page
            </p>
          </div>
          <p class="mt-4 text-neutral-400 dark:text-neutral-300">
            I have a passion for building things, not only to stay engaged and
            occupied but also to continuously learn and develop new skills
          </p>
        </div>
        <ul
          role="list"
          class="mt-12 grid grid-cols-1 gap-6 border-t border-b dark:border-neutral-700 py-12">
          {
            work.map((template) => (
              <>
                <li class="flow-root">
                  <div class="relative -m-2 flex items-center space-x-4 rounded-xl p-2 focus-within:ring-2 focus-within:ring-acccent-500 hover:bg-neutral-50/20 dark:hover:bg-neutral-800">
                    <div class="flex  flex-shrink-0 items-center justify-center ">
                      <img
                        class="h-16 w-16 rounded-xl border border-white/10"
                        src={template.avatar}
                        alt={template.title}
                      />
                    </div>
                    <div>
                      <h3 class="text-lg font-semibold leading-6 text-neutral-900 dark:text-white group-hover:text-neutral-800">
                        <a
                          href={template.url}
                          title={template.title}
                          class="focus:outline-none">
                          <span>{template.title}</span>
                        </a>
                      </h3>
                      <p class="mt-1 text-sm leading-6 text-neutral-400 dark:text-neutral-200">
                        {template.description}
                      </p>
                    </div>
                  </div>
                </li>
              </>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
